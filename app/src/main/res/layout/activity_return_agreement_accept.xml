<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:padding="10dp"
    android:layout_height="match_parent">



    <TextView
        android:id="@+id/txt1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="18dp"
        android:textColor="@color/colorPrimary"
        android:textAppearance="@style/Base.TextAppearance.AppCompat.Large"
        android:gravity="center"
        android:text="Return Agreement and Condition of Item"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true" />

    <EditText
        android:id="@+id/offerdesc"
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:maxLines="5"
        android:textAppearance="@style/Base.TextAppearance.AppCompat.Medium"
        android:lines="3"
        android:hint="Describe the current item condition"
        android:inputType="textMultiLine"
        android:layout_marginTop="26dp"
        android:layout_below="@+id/txt1"
        android:layout_centerHorizontal="true" />

    <Button
        style="?android:textAppearanceSmall"
        android:textStyle="bold"
        android:id="@+id/acceptoffer"
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:textColor="@color/white"
        android:background="@color/colorPrimary"
        android:text="Accept Return Agreement"
        android:layout_marginTop="21dp"
        android:layout_below="@+id/disputeCheck"
        android:layout_alignStart="@+id/offerdesc" />

    <CheckBox
        android:id="@+id/disputeCheck"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="@style/Base.TextAppearance.AppCompat.Medium"
        android:text="Something wrong with the item?"
        android:textColor="@color/colorPrimary"
        android:buttonTint="@color/colorPrimary"
        android:layout_marginTop="21dp"
        android:layout_below="@+id/offerdesc"
        android:layout_centerHorizontal="true" />


</RelativeLayout>