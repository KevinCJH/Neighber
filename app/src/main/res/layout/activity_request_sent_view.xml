<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:padding="10dp"
    android:layout_height="match_parent">


    <TextView
        android:id="@+id/txt1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="@style/Base.TextAppearance.AppCompat.Large"
        android:gravity="center"
        android:text="Agreement and Condition of Item"
        android:textColor="@color/colorPrimary"
        android:layout_marginTop="49dp"
        android:layout_below="@+id/requestdesc"
        android:layout_centerHorizontal="true" />

    <EditText
        android:id="@+id/offerdesc"
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:maxLines="5"
        android:textAppearance="@style/Base.TextAppearance.AppCompat.Medium"
        android:lines="3"
        android:hint="An agreement for you to lend the item."
        android:inputType="textMultiLine"
        android:layout_below="@+id/txt1"
        android:layout_alignStart="@+id/acceptoffer" />

    <Button
        style="?android:textAppearanceSmall"
        android:textStyle="bold"
        android:id="@+id/acceptoffer"
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:textColor="@color/white"
        android:background="@color/colorPrimary"
        android:text="Accept Request"
        android:layout_below="@+id/viewprofile"
        android:layout_alignStart="@+id/viewprofile"
        android:layout_marginTop="20dp" />

    <TextView
        android:id="@+id/rusernameTxt"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_vertical"
        android:text="User Name"
        android:textAppearance="@style/Base.TextAppearance.AppCompat.Large"
        android:textColor="@color/colorPrimary"
        android:layout_marginTop="22dp"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true" />

    <Button
        style="?android:textAppearanceSmall"
        android:textStyle="bold"
        android:id="@+id/viewprofile"
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center_vertical"
        android:background="@color/colorPrimary"
        android:text="View User Profile"
        android:textColor="@color/white"
        android:maxLines="1"
        android:layout_marginTop="26dp"
        android:layout_below="@+id/offerdesc"
        android:layout_centerHorizontal="true" />

    <TextView
        android:id="@+id/requestdesc"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="@style/Base.TextAppearance.AppCompat.Medium"
        android:text="Request Description"
        android:maxLines="2"
        android:layout_below="@+id/rusernameTxt"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="24dp" />


</RelativeLayout>