<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ImageView
        android:id="@+id/imgViewPhoto"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:scaleType="fitXY"
        android:adjustViewBounds="true"
        android:layout_marginStart="15dp"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true"
        android:background="@color/logoorange"
        android:src="@mipmap/neighberlogo"
        android:layout_marginTop="13dp" />

    <ImageView
        android:id="@+id/imgView"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:layout_marginEnd="12dp"
        android:layout_above="@+id/statusTxt"
        android:layout_marginTop="5dp"
        android:layout_alignParentEnd="true" />

    <TextView
        android:id="@+id/itemnameTxt"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Item Name: "
        android:textAppearance="@style/Base.TextAppearance.AppCompat.Large"
        android:textColor="@color/colorPrimary"
        android:layout_marginTop="5dp"
        android:layout_alignParentTop="true"
        android:layout_toEndOf="@+id/imgViewPhoto"
        android:layout_marginStart="11dp" />

    <TextView
        android:text="Posted by: "
        android:textAppearance="@style/Base.TextAppearance.AppCompat.Small"
        android:id="@+id/desc1"
        android:layout_width="match_parent"
        android:drawableLeft="@drawable/ic_user_24dp"
        android:layout_marginTop="5dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/itemnameTxt"
        android:layout_alignStart="@+id/itemnameTxt" />

    <TextView
        android:text="Datetime"
        android:textAppearance="@style/Base.TextAppearance.AppCompat.Small"
        android:drawableLeft="@drawable/ic_access_time_black_24dp"
        android:id="@+id/datetimeTxt"
        android:layout_marginTop="5dp"
        android:layout_marginBottom="3dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/desc1"
        android:layout_alignStart="@+id/itemnameTxt" />

</RelativeLayout>
