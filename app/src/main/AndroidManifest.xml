<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="orbital.raspberry.neighber">

    <!-- To auto-complete the email text field in the login form with the user's emails -->
    <uses-permission android:name="android.permission.GET_ACCOUNTS" />
    <uses-permission android:name="android.permission.READ_PROFILE" />
    <uses-permission android:name="android.permission.READ_CONTACTS" />
    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/neighberlogo"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/neighberlogo"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity
            android:name=".LoginpageActivity"
            android:label="@string/app_name">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".PostActivity" />

        <activity android:name=".ResetPasswordActivity" />

        <activity
            android:name=".MainActivity"
            android:windowSoftInputMode="adjustPan"/>

        <activity
            android:name=".MainSearchedActivity"
            android:windowSoftInputMode="adjustPan" />

        <activity android:name=".SignupActivity" />

        <activity android:name=".ProfileActivity"
                  android:windowSoftInputMode="adjustPan" />

        <activity android:name=".ViewProfileActivity" />
        <activity android:name=".ViewProfileActivity2" />
        <activity android:name=".AddNewActivity" />

        <activity
            android:name=".MainActivity2"
            android:windowSoftInputMode="adjustPan" />

        <activity android:name=".BorrowerRecordsActivity" />

        <activity android:name=".WriteOfferActivity"
                    android:theme="@style/Theme.AppCompat.Light.Dialog"
                    android:label="Write Offer"/>

        <activity android:name=".WriteOfferActivity2"
                     android:theme="@style/Theme.AppCompat.Light.Dialog"
                    android:label="Write Request"/>

        <activity android:name=".EditPostActivity"
                   android:theme="@style/Theme.AppCompat.Light.Dialog"/>

        <activity android:name=".ViewOfferActivity"
                  android:theme="@style/Theme.AppCompat.Light.Dialog"/>

        <activity android:name=".AgreementActivity"
                    android:theme="@style/Theme.AppCompat.Light.Dialog"/>

        <activity android:name=".AgreementActivity2"
                     android:theme="@style/Theme.AppCompat.Light.Dialog"/>

        <activity android:name=".ReturnAgreementActivity"
                    android:theme="@style/Theme.AppCompat.Light.Dialog"/>

        <activity android:name=".ReturnAgreementActivity2"
                 android:theme="@style/Theme.AppCompat.Light.Dialog"/>

        <activity android:name=".ReturnAgreementAcceptActivity"
            android:theme="@style/Theme.AppCompat.Light.Dialog"/>

        <activity android:name=".ReturnAgreementAcceptActivity2"
            android:theme="@style/Theme.AppCompat.Light.Dialog"/>

        <activity android:name=".LenderRecordsActivity" />

        <activity android:name=".ViewRequestActivity"
            android:theme="@style/Theme.AppCompat.Light.Dialog"/>

        <activity android:name=".ViewOfferSentActivity"
            android:theme="@style/Theme.AppCompat.Light.Dialog"/>

        <activity android:name=".ViewRequestSentActivity"
            android:theme="@style/Theme.AppCompat.Light.Dialog"/>

        <activity android:name=".HistoryRecordsActivity" />
        <activity android:name=".HistoryRequestActivity" />
        <activity android:name=".HistoryOfferActivity" />

        <activity android:name=".RateUserActivity"
                 android:theme="@style/Theme.AppCompat.Light.Dialog"/>

        <activity android:name=".OfferRateUserActivity"
                  android:theme="@style/Theme.AppCompat.Light.Dialog"/>

        <activity android:name=".RequestRateUserActivity" />
        <activity android:name=".SettingsActivity" />
        <activity android:name=".ChangePasswordActivity" />
        <activity android:name=".ChangeEmailActivity" />

        <activity android:name=".SendAgreementActivity"
                    android:theme="@style/Theme.AppCompat.Light.Dialog"/>

        <activity android:name=".ChatActivity" />
        <activity android:name=".ChatListActivity" />
        <activity android:name=".ChatListActivity2" />
        <activity android:name=".ChatListActivity3" />

        <activity android:name=".ProfileActivity2"
                  android:windowSoftInputMode="adjustPan" />

        <activity android:name=".GridActivity"
                  android:theme="@style/Theme.AppCompat.Light.Dialog" />

    </application>

</manifest>